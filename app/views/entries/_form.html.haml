= semantic_form_for @entry do |f|
  - if @entry.errors.any?
    #error_explanation
      %h2 
        = pluralize(@entry.errors.count, "error") 
        prohibited this entry from being saved

      %ul
      - @entry.errors.full_messages.each do |msg|
        %li
          = msg

  = f.inputs do
    = f.input :day, :as => :datepicker
    = f.input :project_id, :as => :select, 
              :collection => Project.where(:inactive => false)
    #tasks_dropdown
      = render :partial => 'tasks_select'
    = f.input :description
    = f.input :start, :as => :timepicker
    = f.input :end, :as => :timepicker
    = f.buttons do
      = f.commit_button
    = link_to 'Cancel', collection_path
