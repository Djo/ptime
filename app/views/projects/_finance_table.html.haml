%table
  %thead
    %tr
      %th Key data
      %th About money
  %tfoot
    %tr{ :title => "accountings.sum(:amount) + (rpl)*wage - (entries.sum(:duration) / 60.0 * wage) " }
      %td Expected return
      %td= @project.expected_return
    %tr{ :title => "100.0 * expected_return / accountings.where(:positive => true).sum(:amount)" }
      %td Expected profitability
      %td= expected_profitability
  %tr
    %td Internal hourly rate
    %td{:title => "foobar"}= @project.wage
  :css
    .red {
      color: orange;
      }
  %tr{ :title => "(entries.sum(:duration) / 60.0) * wage" }
    %td Current internal cost
    %td= @project.current_internal_cost
  %tr{ :title => "" }
    %td Expected internal cost
    %td.red to be defined
  %tr{ :title => "accountings.where(:positive => false).sum :amount" }
    %td External cost
    %td= @project.external_cost
  %tr{ :title => "accountings.where(:positive => true).sum :amount" }
    %td Budget
    %td= @project.budget
