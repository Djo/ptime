%h2.grid_12 Log in

= semantic_form_for resource, :as => resource_name,
  :url => session_path(resource_name),
  :html => {:class => 'grid_6'} do |form|
  = form.inputs do
    = form.input :username, :placeholder => "Username", :as => :string, :label => false
    = form.input :password, :placeholder => "Password", :label => false
    = form.commit_button :label => 'Sign in'
    - if devise_mapping.rememberable?
      %li.option
        = form.check_box :remember_me
        = form.label :remember_me
    = render :partial => "devise/shared/links"

