# Adds facebox

$ ->
  window.facebox_init = facebox_init = $('a[rel*=facebox]')
  # return unless facebox_init.length

  $('input[rel*=facebox]').live 'click', ->
    # Fetch action
    action = $(this).parent().parent().attr('action')
    $.facebox({ ajax: action })
    return false

  $.facebox.settings.closeImage = "<%= asset_path('closelabel.png') %>"
  $.facebox.settings.loadingImage = "<%= asset_path('loading.gif') %>"
  facebox_init.facebox()
